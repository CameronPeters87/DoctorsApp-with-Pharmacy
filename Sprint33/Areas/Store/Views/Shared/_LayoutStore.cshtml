    <script src="~/Content/Store/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Store/js/jquery-ui.js"></script>
    <script src="~/Content/Store/js/popper.min.js"></script>
    <script src="~/Content/Store/js/bootstrap.min.js"></script>
    <script src="~/Content/Store/js/owl.carousel.min.js"></script>

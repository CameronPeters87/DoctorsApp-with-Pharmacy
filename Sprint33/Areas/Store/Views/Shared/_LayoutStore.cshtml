</head>
<body>
    <!--Navigation Menu-->
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>

            <div class="order-lg-last">
                @if (Session["UserName"] != null && Session["UserName"] != "")
                {
                    if (Session["Title"] == "Doctor")
                    {
                        <a href="@Url.Action("Homepage", "Doctors1", new { area = "" })"
                           class="btn btn-info">
                            <i class="fa fa-tachometer"></i>
                            Dashboard
                        </a>
                    }
                    else if (Session["Title"] == "Patient")
                    {
                        { Html.RenderAction("CartItemsPartial", "Shop"); }

                        <a href="@Url.Action("Homepage", "Patients1", new { area = "" })"
                           class="btn btn-info">
                            <i class="fa fa-tachometer"></i>
                            Dashboard
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Homepage", "Admins1", new { area = "" })"
                           class="btn btn-info">
                            <i class="fa fa-tachometer"></i>
                            Dashboard
                        </a>
                    }
                    <a href="@Url.Action("Login", "Home", new { area = "" })"
                       class="btn btn-primary">
                        Log Out
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Home", new { area = "" })" class="btn btn-primary">
                        Login @Session["UserName"]
                    </a>
                }
            </div>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <div class="headline">
                            <a class="navbar-brand" href="/Home/FrontPage">
                                <span class="fa fa-user-md fa-2x"></span>
                                Dr J Govender
                            </a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/frontpage">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/store/shop/">
                            Store
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="home/about">
                            About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">
                            Contact
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- End of Navigation Menu -->


    <div>
        @RenderBody()
    </div>

    <!--This seperates the Header from the Footer in a shared layout cshtml View -->

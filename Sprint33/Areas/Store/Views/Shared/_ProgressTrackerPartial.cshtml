                        <h4 class="progress-title">On it's way!</h4>
                    </div>
                </li>
            }
            else
            {
                <li class="progress-step">
                    <div class="progress-marker"></div>
                    <div class="progress-text">
                        <h4 class="progress-title">On it's way!</h4>
                    </div>
                </li>
            }


            @if (Model.ProcessNumber == 5)
            {
                <li class="progress-step is-complete">
                    <div class="progress-marker"></div>
                    <div class="progress-text">

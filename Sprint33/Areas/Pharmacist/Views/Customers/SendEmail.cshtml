@model Sprint33.Areas.Pharmacist.Models.CustomerEmailModel

@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Areas/Pharmacist/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card shadow h-100 py-2 col-md-8" style="margin-left:180px">
        <div class="card-body">
            @using (Html.BeginForm("SendEmail", "Customers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Email)
                @Html.HiddenFor(model => model.Subject)


                <div class="form-horizontal">
                    <div class="card-header py-3">
                        <h4 class="m-0 font-weight-bold text-primary">Contact: @Model.Patient.FirstName @Model.Patient.Surname</h4>
                    </div>
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Subject ..." } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Body, new { @class = "form-control", @placeholder = "Body ..." })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Email" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@model IEnumerable<Sprint33.Areas.Pharmacist.Models.SingleNotificationVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Pharmacist/Views/Shared/_Layout.cshtml";
}

<!--List Notifications-->
<div class="col-md-12">
    <div class="card shadow h-100 py-2">
        <div class="card-body">
            <div class="card-header py-3" style="margin-bottom:20px;">
                <h4 class="m-0 font-weight-bold text-primary">Notifications</h4>
            </div>

            @if (!Model.Any())
            {
                <div class="notification" style="margin:10px">
                    <h2 class="text-center">You have no notifications</h2>
                    <hr />
                </div>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="notification" style="margin:10px">
                        <div class="mr-3" style="display:inline-block; float:left;">
                            <div class="icon-circle @item.BackgroundColorIcon">
                                <i class="fas @item.Icon text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="small text-gray-500">@item.CreatedDate</div>
                            <span class="font-weight-bold">@item.Message</span>
                        </div>
                        <hr />
                    </div>
                }

            }
        </div>
    </div>
</div>
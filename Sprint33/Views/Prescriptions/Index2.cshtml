            <div>
                <br />
                <div>
                    @using (Html.BeginForm("Index2", "Prescriptions", FormMethod.Get))
                    {
                        @Html.TextBox("Search") <input type="submit" value="Search" />
                    }
                </div>
            </div>
        </p>

        <table class="table table-striped">
            <tr class="table-success">
                <th>
                    @Html.DisplayNameFor(model => model.PatientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateIssued)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrescriptionValid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InventoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.itemQuantity)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateIssued)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrescriptionValid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InventoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.itemQuantity)
                    </td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("ViewPrescription")?id=@item.Id">
                            <span class="fa fa-eye"></span>
                            View
                        </a>
                    </td>
                </tr>
            }

        </table>

        <a type="button" class="btn btn-secondary" style="margin-top:15px"

@model IEnumerable<Sprint33.Models.Patient>

@{ ViewBag.Title = "List of patients"; }

<div class="container">

<h2>List of patients</h2>
<table class="table table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ContactNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.isActive)
    </td>
    <td>
        @Html.ActionLink("Edit", "AdminEdit", new { id = item.UserID }) |
        @Html.ActionLink("Details", "AdminDetails", new { id = item.UserID })
        @*@Html.ActionLink("Delete", "AdminDelete", new { id=item.UserID })*@
    </td>
</tr>}

</table>
<a type="button" class="btn btn-secondary" style="margin-top:15px"
   href="@Url.Action("Homepage", "Admins1")">
    <span class="fa fa-home"></span>
</a>
</div>
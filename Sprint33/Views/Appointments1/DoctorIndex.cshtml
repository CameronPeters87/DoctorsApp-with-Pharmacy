@model IEnumerable<Sprint33.Models.Appointment>

@{ ViewBag.Title = "DoctorIndex"; }

<h2>Doctors Appointments</h2>

<div class="container">
    <p>
        <a class="btn btn-primary"
           href="@Url.Action("CreateSlot")">
            <span class="fa fa-plus"></span>
            Create Appointments Slots
        </a>
    </p>
    <table class="table table-striped">
        <tr class="table-success">
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th>
                Confirmed and Paid
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.PatientName != null && item.CheckedIn == false)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PatientName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AppointmentTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.isPaid)
    </td>
    <td>
        <a href="@Url.Action("Create", "Consultation_v2",
                        new { appointmentId = item.AppointmentID})">
            Create Consultation
        </a> |
        @Html.ActionLink("Edit", "DoctorEdit", new { id = item.AppointmentID }) |
        @Html.ActionLink("Details", "DoctorDetails", new { id = item.AppointmentID }) |
        @Html.ActionLink("Cancel", "DoctorCancel", new { id = item.AppointmentID })
        @*@Html.ActionLink("Remove Slot", "DoctorDelete", new { id = item.AppointmentID })*@

    </td>
</tr>
}
}

    </table>
    <a type="button" class="btn btn-secondary" style="margin-top:15px"
       href="@Url.Action("Homepage", "Doctors1")">
        <span class="fa fa-home"></span>
    </a>
</div>